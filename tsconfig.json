{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "target": "es2018",
    "rootDir": "src",
    "outDir": "lib",
    "downlevelIteration": true,
    "lib": [ "es2017", "DOM" ],
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "files": [ "src/index.ts", "src/EncodeTools.ts", "src/EncodeToolsNative.ts" ]
}
